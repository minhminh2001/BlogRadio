<?xml version="1.0" encoding="utf-8"?>
<com.vnnplus.blogradio.widget.RoundedCornerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_5"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rltboltom"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:layout_above="@+id/rlt_bottom"
            android:background="@drawable/bgr_bottom"
            android:orientation="vertical"
            >

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlt_imv">
            <com.vnnplus.blogradio.widget.ImageViewRatio
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ratioWidth="1.55"
                app:ratioHeight="1"
                android:scaleType="centerCrop"
                android:id="@+id/imv_home" />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/vlog"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/vlog"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/rlt_imv"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/rlt_bottom"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hành trình của hạnh phúc"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/tittle_text"
                android:lines="1"
                android:id="@+id/Tv_tittle"
                android:textSize="@dimen/dp_15"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@+id/Tv_tittle">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:id="@+id/view"
                    android:src="@drawable/bt_giongdoc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view"
                    android:textSize="@dimen/dp_13"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:id="@+id/tv_author"
                    android:textColor="@color/authorClolor"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="Hằng Nga , Tuấn Anh"/>


            </RelativeLayout>
        </RelativeLayout>
        </RelativeLayout>

</com.vnnplus.blogradio.widget.RoundedCornerLayout>