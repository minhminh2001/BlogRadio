<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_default"
        android:visibility="visible">
        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/scrollview"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/ll_top"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/rlt_view"
                        android:background="@color/black"
                        android:layout_height="match_parent"
                        >
                        <TextureView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_230"
                            android:id="@+id/SurfaceView"/>
                        <RelativeLayout
                            android:id="@+id/vgControlBottom"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/dp_50"
                            android:background="@color/bg_black_tranparent"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_10"
                            android:layout_alignParentBottom="true"
                            android:paddingRight="@dimen/dp_10"
                            android:visibility="gone">
                            <ImageView
                                android:id="@+id/imgfullScreen"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:onClick="onBtnFullCreenClick"
                                android:src="@drawable/zoom_in" />
                            <TextView
                                android:id="@+id/tvCurProgessRest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_toLeftOf="@id/imgfullScreen"
                                android:gravity="right"
                                android:text="00:01"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_12"
                                android:textStyle="italic" />

                            <SeekBar
                                android:id="@+id/sb_process"
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/dp_10"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/dp_8"
                                android:layout_toLeftOf="@id/tvCurProgessRest"
                                android:layout_toRightOf="@+id/Player"
                                android:gravity="center_vertical"
                                android:progressDrawable="@drawable/player_progress_drawable"
                                android:thumb="@null" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_20"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:onClick="onBtnPlayClick"
                                android:id="@+id/Player"
                                android:src="@drawable/bt_play"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/back"
                            android:padding="@dimen/dp_10">
                            <ImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:src="@drawable/bt_back"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"/>
                        </RelativeLayout>


                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ll_bottom">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#3a424d"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_20"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:onClick="onBtnPlayClick"
                                android:id="@+id/imgBtnPlay"
                                android:src="@drawable/bt_pause"/>
                            <SeekBar
                                android:id="@+id/seek_bar"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_10"
                                android:layout_toRightOf="@+id/imgBtnPlay"
                                android:layout_toLeftOf="@+id/tv_time"
                                android:layout_centerVertical="true"
                                android:splitTrack="false"
                                android:progress="0"
                                android:progressDrawable="@drawable/player_progress_drawable"
                                android:thumb="@color/rectangle_menu"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_time"
                                android:textSize="@dimen/dp_13"
                                android:layout_toLeftOf="@+id/imgFullScreen"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_5"
                                android:textColor="@color/authorClolor"
                                android:layout_gravity="center"
                                android:text="--"/>
                            <ImageView
                                android:id="@+id/imgFullScreen"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:visibility="visible"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/dp_10"
                                android:onClick="onBtnFullCreenClick"
                                android:src="@drawable/zoom_out" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#4c5564">
                            <com.andexert.library.RippleView
                                android:layout_width="wrap_content"
                                rv_centered="true"
                                app:rv_color="#3a424d"
                                android:id="@+id/rv_volume"
                                app:rv_rippleDuration="100"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="@dimen/dp_25"
                                    android:layout_height="@dimen/dp_25"
                                    android:id="@+id/img_volume"
                                    android:layout_margin="@dimen/dp_15"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:src="@drawable/bt_volume"/>

                            </com.andexert.library.RippleView>
                            <com.andexert.library.RippleView
                                android:layout_width="wrap_content"
                                rv_centered="true"
                                app:rv_color="#3a424d"
                                android:id="@+id/rv_favorite"
                                app:rv_rippleDuration="100"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="@dimen/dp_25"
                                    android:layout_height="@dimen/dp_25"
                                    android:layout_weight="1"
                                    android:tag="0"
                                    android:id="@+id/img_favorite"
                                    android:layout_margin="@dimen/dp_15"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/bt_like"/>
                            </com.andexert.library.RippleView>
                            <com.andexert.library.RippleView
                                android:layout_width="wrap_content"
                                rv_centered="true"
                                app:rv_color="#3a424d"
                                android:id="@+id/rv_repead"
                                app:rv_rippleDuration="100"
                                android:layout_centerInParent="true"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="@dimen/dp_25"
                                    android:layout_height="@dimen/dp_25"
                                    android:layout_weight="1"
                                    android:tag="0"
                                    android:id="@+id/imv_repead"

                                    android:layout_margin="@dimen/dp_10"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/bt_un_repeat"/>
                            </com.andexert.library.RippleView>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/rv_volume"
                                android:layout_toLeftOf="@+id/rv_repead">
                                <com.andexert.library.RippleView
                                    android:layout_width="wrap_content"
                                    rv_centered="true"
                                    app:rv_color="#3a424d"
                                    app:rv_rippleDuration="100"
                                    android:id="@+id/rv_share"
                                    android:layout_centerInParent="true"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="@dimen/dp_25"
                                        android:layout_height="@dimen/dp_25"
                                        android:layout_weight="1"
                                        android:id="@+id/img_share"
                                        android:layout_margin="@dimen/dp_10"
                                        android:src="@drawable/bt_share"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true" />
                                </com.andexert.library.RippleView>
                            </RelativeLayout>




                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/rv_repead"
                                android:layout_toLeftOf="@+id/rv_favorite">
                                <com.andexert.library.RippleView
                                    android:layout_width="wrap_content"
                                    rv_centered="true"
                                    app:rv_color="#3a424d"
                                    app:rv_rippleDuration="100"
                                    android:id="@+id/rv_download"
                                    android:layout_centerInParent="true"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="@dimen/dp_25"
                                        android:layout_height="@dimen/dp_25"
                                        android:layout_weight="1"
                                        android:layout_margin="@dimen/dp_10"
                                        android:id="@+id/img_download"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/bt_down"/>
                                </com.andexert.library.RippleView>
                            </RelativeLayout>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textColor="@android:color/black"
                            android:id="@+id/tv_Tittle"
                            android:paddingLeft="@dimen/dp_10"
                            android:textSize="@dimen/dp_17"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="@dimen/dp_10"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:id="@+id/view"
                                    android:layout_gravity="center"
                                    android:src="@drawable/bt_tacgia"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/view"
                                    android:selectAllOnFocus="true"
                                    android:singleLine="true"
                                    android:textSize="@dimen/dp_13"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/authorClolor"
                                    android:layout_gravity="center"
                                    android:id="@+id/tv_author"
                                    android:lines="1"
                                    android:layout_marginLeft="@dimen/dp_3"
                                   />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_gravity="center"
                                    android:src="@drawable/bt_giongdoc"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/view"
                                    android:textSize="@dimen/dp_13"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:selectAllOnFocus="true"
                                    android:singleLine="true"
                                    android:id="@+id/tv_singler"
                                    android:textColor="@color/authorClolor"
                                    android:lines="1"
                                    android:layout_marginLeft="@dimen/margin_left"
                                   />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:paddingLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/dp_13"
                                android:textColor="@color/authorClolor"
                                android:id="@+id/tv_view"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_gravity="center"
                                    android:src="@drawable/bt_time"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/view"
                                    android:textSize="@dimen/dp_13"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:textColor="@color/authorClolor"
                                    android:lines="1"
                                    android:id="@+id/tv_date"
                                    android:layout_marginLeft="@dimen/margin_left" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@color/rectangle_menu" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/dp_10"
                            android:id="@+id/containe">
                            <android.support.design.widget.TabLayout
                                android:id="@+id/tabs"
                                android:layout_width="match_parent"
                                app:tabSelectedTextColor="@color/bg_tabtrip"
                                app:tabTextAppearance="@style/MineCustomTabText"
                                app:tabMaxWidth="0dp"
                                app:tabGravity="fill"
                                app:tabMode="fixed"
                                app:tabIndicatorColor="@color/bg_tabtrip"
                                android:layout_height="@dimen/dp_48" />
                            <android.support.v4.view.ViewPager
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/pager"></android.support.v4.view.ViewPager>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></RelativeLayout>
</RelativeLayout>