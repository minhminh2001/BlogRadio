<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_black_tranparent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tittle"
            android:gravity="center"
            android:textColor="@color/tittle_text"
            android:layout_centerHorizontal="true"
            android:text="Bạn đã sử dụng hết 60s miễn phí của dịch vụ , Vui lòng đăng kí gói cước Radio để tiếp tục thưởng thức nội dung này"/>
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/tv_tittle1"-->
            <!--android:layout_below="@+id/tv_tittle"-->
            <!--android:gravity="center"-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:textColor="@color/tittle_text"-->
            <!--android:text="Miễn phí hoàn toàn cước 3G tải nội dung khi đăng ký gói."-->
            <!--android:layout_centerHorizontal="true"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_tittle"
            android:layout_marginTop="@dimen/dp_15"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:text="ĐĂNG KÝ"
                    android:background="@drawable/dialog_view"
                    android:paddingLeft="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:id="@+id/tv_register"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:text="HỦY"
                    android:background="@drawable/dialog_cancel"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:id="@+id/tv_cancel"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>