<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/background_app"
        android:id="@+id/rlt_top"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ĐĂNG NHẬP"
            android:id="@+id/tv_category"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:padding="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/bt_back"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dangnhap"
        android:layout_below="@+id/rlt_top">
    <ImageView
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlt_center"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logodangnhap"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/rlt_center"
        android:layout_marginLeft="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_42">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_8"
            android:inputType="phone"
            android:id="@+id/edt_phone"
            android:paddingBottom="@dimen/dp_8"
            android:textSize="@dimen/dp_14"
            android:background="@drawable/selector_btn_login"
            android:hint="Nhập số điện thoại của bạn"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_8"
            android:inputType="phone"
            android:id="@+id/edt_Otp"
            android:visibility="gone"
            android:paddingBottom="@dimen/dp_8"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/edt_phone"
            android:background="@drawable/selector_btn_login"
            android:hint="Nhập mã OTP"/>

    </RelativeLayout>
    <TextView
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlt_center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_8"
        android:gravity="center"
        android:id="@+id/btn_Login"
        android:paddingBottom="@dimen/dp_8"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_login"
        android:text="Tiếp Tục"
        android:tag="0"
        android:textSize="@dimen/dp_14"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/dp_15"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ứng dụng chính thức của Blogradio.vn"
            android:paddingBottom="@dimen/dp_5"
            android:textColor="@color/bg_tabtrip"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>