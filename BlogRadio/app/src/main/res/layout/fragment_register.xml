<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_app"
        android:layout_height="@dimen/dp_50"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ĐĂNG KÝ"
            android:id="@+id/tv_category"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:padding="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/bt_back"
                />
        </LinearLayout>
    </RelativeLayout>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webview"
        android:visibility="gone"></WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_register"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cú pháp Đăng ký/Hủy Blog Radio: "
        android:textSize="@dimen/dp_16"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cú pháp đăng ký/Hủy Blog Radio: "
        android:id="@+id/tv_Dangky"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cú pháp đăng kí/Hủy Blog Radio: "
        android:textSize="@dimen/dp_16"
        android:id="@+id/tv_Huygoi"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(*)Bạn phải dùng thuê bao Mobifone để đăng ký dịch vụ "
        android:textSize="@dimen/dp_16"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách gói dịch vụ: "
        android:textSize="@dimen/dp_16"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:weightSum="10"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_bottom_right_top"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:text="Gói cước"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_bottom_right_top"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:text="Mã gói"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_bottom_right_top"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="Tính năng gói"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_bottom_right_top"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:text="Giá gói"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_right"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:text="RADIO"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_right"
            android:textColor="@color/red"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:id="@+id/tv_Radio"
            android:textStyle="bold"
            android:paddingBottom="@dimen/dp_5"
            android:text="RA"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_right"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="Nghe các nội dung Audio bản quyền với chất lượng cao"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_right"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dp_5"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/tv_PriceRA"
            android:paddingBottom="@dimen/dp_5"
            android:text="2000Đ/ngày"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_bottom_right_top"
            android:textColor="@color/black"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:text="VLOG"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_bottom_right_top"
            android:textColor="@color/red"
            android:paddingTop="@dimen/dp_5"
            android:textStyle="bold"
            android:id="@+id/tv_Vlog"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:text="VL"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_bottom_right_top"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:text="Nghe các nội dung Vlog bản quyền với chất lượng cao"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/cell_border_bottom_right_top"
            android:textColor="@color/black"
            android:id="@+id/tv_PriceVL"
            android:textStyle="bold"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:text="2000Đ/ngày"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_7"
            android:id="@+id/btn_RegisterRadio"
            android:gravity="center"
            android:tag="0"
            android:paddingBottom="@dimen/dp_7"
            android:textSize="@dimen/dp_14"
            android:background="@drawable/btn_shape"
            android:text="ĐĂNG KÝ GÓI RADIO"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_7"
            android:tag="0"
            android:id="@+id/btn_RegisterVlog"
            android:textSize="@dimen/dp_14"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_7"
            android:background="@drawable/btn_shape"
            android:text="ĐĂNG KÝ GÓI VLOG"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
    </LinearLayout>


</LinearLayout>