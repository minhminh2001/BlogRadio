<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/dp_40"
    android:background="@color/bg_black_tranparent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlt_header"
        android:elevation="@dimen/dp_5"
            android:background="@android:color/white"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="LỰA CHỌN AVATAR"
                android:textColor="@color/bg_tabtrip"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/rlt_bottom"
            android:background="#e3e3e3"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlt_center"
                android:paddingLeft="@dimen/dp_40"
                android:paddingRight="@dimen/dp_40"
                android:paddingTop="@dimen/dp_7"
                android:id="@+id/btn_ok"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/dp_7"
                android:background="@drawable/btn_shape"
                android:text="OK"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp_20"/>
        </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@android:color/white"
        android:id="@+id/recycleview"
        android:layout_above="@+id/rlt_bottom"
        android:layout_below="@+id/rlt_header">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>