<?xml version="1.0" encoding="utf-8"?>
<com.vnnplus.blogradio.widget.RoundedCornerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_10"
    android:elevation="@dimen/dp_10"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.vnnplus.blogradio.widget.ImageViewRatio
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ratioWidth="1.55"
            app:ratioHeight="1"
            android:scaleType="centerCrop"
            android:id="@+id/imv_radio"
            android:src="@drawable/thumb_detail"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"
            android:layout_below="@+id/imv_radio"
            android:id="@+id/bgr_bt"></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rltboltom"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_above="@+id/bgr_bt"
            android:background="@drawable/bgr_bottom"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cateradio"
                android:textStyle="bold"
                android:text="Bật mí MV Give me kiss"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_15" />
        </RelativeLayout>
    </RelativeLayout>

</com.vnnplus.blogradio.widget.RoundedCornerLayout>